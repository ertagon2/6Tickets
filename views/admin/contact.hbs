<script src="javascript/admin/master.js"></script>

<div class="row">
    <div class="col" id="main-content">

        <div class="card user-card">
            <div class="card-body">
                <h2>Admin Dashboard</h2>
                <div id="alert"></div>
                <hr>
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin_index">Event Requests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin_categories">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin_contact">Contact Forms</a>
                    </li>
                </ul>              <hr>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Message</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each contacts}}
                            <tr>
                                <th scope="row">{{name}}</th>
                                <td>{{email}}</td>
                                <td>{{message}}</td>
                                <td><a class="text-info" href="mailto:{{email}}">Reply</a></td>
                            </tr>
                        {{/each}}
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>