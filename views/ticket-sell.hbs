<div class="row">
    <div class="offset-md-3 col-md-6 justify-content-center" id="main-content">
        <div class="row row justify-content-center mt-4">
            <h2><strong>Sell Tickets</strong></h2>
        </div>

        <div class="row mt-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form id="event-form">
                        <div class="form-row">

                            <div class="form-group col-sm-12">
                                <span>Event: </span>
                                <a href="{{data._id}}"><strong>{{data.name}}</strong></a>
                            </div>

                            <div class="form-group col-sm-12">
                                <label for="ticketType">*Ticket type</label>
                                <select class="form-control col-sm-5" id="ticketType">
                                    <option value="0">Digital</option>
                                    <option value="1">Physical</option>
                                    <option value="2">Both</option>
                                </select>
                            </div>

                            <div class="form-group col-sm-6">
                                <label for="ticketType">*Assigned seats</label>
                                <select class="form-control" id="ticketIfSeats">
                                    <option value="yes">Yes - seat no. on the ticket</option>
                                    <option value="no">No - seats assigned on first come first served basis</option>
                                </select>
                            </div>

                            <div class="form-group col-sm-6">
                                <label for="ticketNum">*Number of tickets</label>
                                <input type="number" class="form-control" id="ticketNum">
                            </div>

                            <div class="form-group col-sm-6">
                                <label for="ticketPrice">*Price</label>
                                <input type="number" class="form-control" id="ticketPrice" disabled>
                            </div>

                            <div class="form-group col-sm-6">
                                <div style="margin-top: 40px; margin-left: 5px">
                                    <label for="diffPrice">Tickets have different prices</label>
                                    <input type="checkbox" id="diffPrice" value="true">
                                </div>
                            </div>

                            <div class="form-group col-sm-12">
                                <label for="ticketDescription">Ticket description - optional</label>
                                <textarea class="form-control" id="ticketDescription" rows="4" maxlength="600"></textarea>
                            </div>

                            <table class="table table-hover" style="text-align: center">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Seat No.</th>
                                        <th scope="col">Options</th>
                                    </tr>
                                </thead>

                                <tbody id="ticketSellTable">
                                    <tr id="idid">
                                        <th scope="row">1</th>
                                        <td>address</td>
                                        <td>venue</td>
                                        <td>test test test test test test test test </td>
                                    </tr>
                                    <tr id="idid">
                                        <th scope="row">2</th>
                                        <td>address</td>
                                        <td>venue</td>
                                        <td>date</td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="col-md-5 mx-auto">
                                <button type="submit" class="btn btn-outline-dark btn-block" id="eventBtn">SELL</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>